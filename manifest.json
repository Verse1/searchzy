{
  "name": "Searchzy",
  "description": "An extension to search for text in a YouTube video",
  "version": "0.1.0",
  "content_scripts": [
    {
      "matches": [
        "http://www.youtube.com/watch?*",
        "https://www.youtube.com/watch?*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": "icon.png",
    "default_title": "Searchzy",
    "default_popup": "popup.html"
  },
  "host_permissions": ["http://www.youtube.com/", "https://www.youtube.com/"],
  "manifest_version": 3
}
